@model HoaDon



<div class="container-lg justify-content-center  " style="height=960px">
    <h3 class="font-weight-bold m-5">Quản Lý </h3>
    <div class="row ">

        <div class="col-3">
            <section>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item "><a class="nav-link px-2 m-1" asp-area="Admin" asp-controller="DonHang" asp-action="Index">Kiểm tra đơn hàng khách hàng</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1 active" asp-area="Admin" asp-controller="SanPham" asp-action="Index">Quản lý sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1" asp-area="Admin" asp-controller="TheLoai" asp-action="Index">Quản lý thể loại</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1" asp-area="Admin" asp-controller="TinTuc" asp-action="Index">Quản lý tin tức</a></li>
                </ul>
            </section>
        </div>
        <div class="col-9 ">
            <section>
                <form>
                    <div class="row">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group col-10">
                            <label asp-for="Id">Mã đơn hàng</label>
                            <input asp-for="Id" type="text" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="Name">Tên khách hàng</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="PhoneNumber">Số điện thoại</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="Address">Địa chỉ</label>
                            <input asp-for="Address" type="text" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="OrderDate">Ngày đặt hàng</label>
                            <input asp-for="OrderDate" type="text" class="form-control" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="OrderStatus">Tình trạng</label>
                            <input asp-for="OrderStatus" type="text" class="form-control" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="Total">Tổng cộng</label>
                            <input asp-for="Total" type="text" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <a asp-action="Index" asp-controller="DonHang" class="btn btn-secondary">Quay lại</a>
                </form>

            </section>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
