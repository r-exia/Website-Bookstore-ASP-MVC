@{
    ViewData["Title"] = "Edit";
}

@model TinTuc
<div class="container-lg justify-content-center  " style="height=960px">
    <h3 class="font-weight-bold m-5">Quản Lý </h3>
    <div class="row ">

        <div class="col-3">
            <section>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item "><a class="nav-link px-2 m-1" asp-area="Admin" asp-controller="DonHang" asp-action="Index">Kiểm tra đơn hàng khách hàng</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1  " asp-area="Admin" asp-controller="SanPham" asp-action="Index">Quản lý sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1 " asp-area="Admin" asp-controller="TheLoai" asp-action="Index">Quản lý thể loại</a></li>
                    <li class="nav-item"><a class="nav-link px-2 m-1 active" asp-area="Admin" asp-controller="TinTuc" asp-action="Index">Quản lý tin tức</a></li>
                </ul>
            </section>
        </div>
        <div class="col-9 ">
            <section>

                <h3>Chỉnh sửa bài viết</h3>
                <form method="post" asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TieuDe">Tiêu đề</label>
                        <input asp-for="TieuDe" type="text" class="form-control" />
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGian">Ngày tạo</label>
                        <input asp-for="ThoiGian" type="date" class="form-control" />
                        <span asp-validation-for="ThoiGian" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NoiDung">Nội dung</label>
                        <textarea asp-for="NoiDung" id="Description" type="text" class="form-control"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl">Hình ảnh</label>
                        <input asp-for="ImageUrl" type="text" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>

                </form>


            </section>
        </div>
    </div>

    @section Scripts{
        <script>
            ClassicEditor
                .create(document.querySelector('#Description'))
                .catch(error => {
                    console.error(error);
                });
        </script>
    }
