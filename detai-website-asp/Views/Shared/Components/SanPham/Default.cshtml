@model IEnumerable<SanPham>

@foreach (var item in @Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="product__item">
            <div class="product__item__pic set-bg" data-setbg="@item.ImageUrl">
                <ul class="product__item__pic__hover">
                    <li><a asp-action="grid"><i class="fa fa-heart"></i></a></li>
                    <li><a href="https://twitter.com/" target="_blank"><i class="fa fa-retweet"></i></a></li>
                    <li><a asp-action="Details" asp-route-sanphamId="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="product__item__text">
                <h6>@item.Name</h6>
                <h5>@String.Format("{0:0,0}", item.Price) VND</h5>
            </div>
        </div>
    </div>
}
