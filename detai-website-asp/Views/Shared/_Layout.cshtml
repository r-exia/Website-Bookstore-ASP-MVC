            <a asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/img/banner/5.jpg" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a asp-area="Customer" asp-controller="Home" asp-action="Grid"><i class="fa fa-heart"></i> <span>1</span></a></li>
